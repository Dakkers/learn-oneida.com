{
  "name": "learn-mohawk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "ci:format": "prettier ./src --check",
    "dev": "next dev",
    "format:write": "prettier ./src --write",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:deploy": "pnpm run pages:build && wrangler pages deploy",
    "prepare": "husky install",
    "preview": "pnpm run pages:build && wrangler pages dev",
    "start": "next start",
    "tailwind": "pnpm run tailwind:watch",
    "tailwind:build": "npx tailwindcss -i ./src/style.css -o ./src/learn-mohawk.css",
    "tailwind:watch": "npx tailwindcss -i ./src/style.css -o ./src/learn-mohawk.css --watch",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@ukwehuwehneke/ohutsya": "workspace:*",
    "next": "15.1.2",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.7",
    "@cloudflare/workers-types": "^4.20241224.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.38.0",
    "eslint-config-next": "15.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-next-on-pages": "^1.13.7",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vercel": "^34.4.0",
    "wrangler": "^3.99.0",
    "zod": "^3.24.1"
  },
  "lint-staged": {
    "*.{ts,tsx,css,md}": "pnpm run format:write"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.2",
      "@types/react-dom": "19.0.2"
    }
  }
}
