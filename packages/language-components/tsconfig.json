{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "build": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "./lib/types",
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "noEmit": true,
    "outDir": "lib/types",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@ukwehuwehneke/*": ["../packages/*/src"]
    },
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "ES2021",
    "typeRoots": [
      "../ohutsya/lib/types"
    ],
    "useDefineForClassFields": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "references": [
    { "path": "../../packages/ohutsya" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules/"],
}
