{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@ukwehuwehneke/*": ["../packages/*/src"]
    },
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "ES2021",
    "useDefineForClassFields": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/"]
}
